<div class="bg-gray-100 rounded-xl p-8 max-w-5xl mx-auto">
  <h1 class="text-2xl font-medium"><%= t '.title' %></h1>
  <div class="mt-4">
    <%= form_tag :weather, method: :get, data: { turbo_frame: :weather, turbo_action: 'advance' } do %>
      <div class="flex flex-col sm:flex-row w-full">
        <%= label_tag :address, t('.form.address.label'), class: 'hidden' %>
        <%= text_field_tag :address, nil, placeholder: t('.form.address.placeholder'),
                                          autocomplete: 'off',
                                          type: 'search',
                                          autofocus: true,
                                          class: 'border-gray-300 rounded-xl w-full py-3' %>
        <%= submit_tag t('.form.submit'), class: 'mt-3 sm:mt-0 sm:ml-3 py-3 px-6 bg-blue-600 text-white font-medium rounded-xl flex-shrink-0 cursor-pointer hover:bg-blue-500' %>
      </div>
    <% end %>
  </div>
</div>
